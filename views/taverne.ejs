
<%- include('include/header'); %>


<body id="tavernePage">
    <section class="wrapperBody">
        
        <section id="playerSection" class="boxShadow">
            <div class="content overflowAuto boxShadow">                
                <h1> 
                    Hero : <img src="images/icon/<%= hero.type %>.png" alt="" class="iconAvatar"> 
                    <span class="playerName"><%= hero.name %></span>
                </h1>
                <hr>

                <div>
                    <img src="images/elements/<%= hero.type %>.png" alt="fiche avatar" class="avatar">
                </div>
    
                <form action="" method="POST">
                    <input type="text" name="mode" value='<%= gameMode %>' hidden>
    
                    <div class="centerText">
                        <label for="etage">Partir en quete :</label>
                        <select name="etage" id="etage">
                            <option value="">Etage 1</option>
                            <option value="">Etage 2</option>
                            <option value="">Etage 3</option>
                        </select>
                    </div>
    
                    <hr>
                    <label for="">Joueurs a ma table : </label> <br><br>
                    <input type="checkbox"><img src="images/icon/elf.png" alt="" class="iconAvatar"> <label class="playerName">JeanPhi</label>  <br>

                    <input type="checkbox"><img src="images/icon/naim.png" alt="" class="iconAvatar"> <label class="playerName">Floflo</label>  <br>

                    <input type="checkbox"><img src="images/icon/barbare.png" alt="" class="iconAvatar"> <label class="playerName">Manu</label>  <br>
                    
    
                    <hr>
                    <div class="centerText formSubmit">
                        <button type="submit" class="btn">
                            <img src="images/icon/boots.png" alt="icone bottes"> Partir avec ces vauriens
                        </button> 
                    </div>
                </form>
            </div>
        </section>

        <section id="taverneSection" class="<%= gameMode %>">
            <%- include('./component/chat'); %>
        </section>

        <section id="allPlayerSection" class="boxShadow">
            <div class="content overflowAuto boxShadow">
                <h1>Heros dans la taverne :</h1>
                <ul class="connectedUser">
                </ul>

                <h1>Heros non present :</h1>
                <ul class="notConnectedUser">                    
                </ul>
            </div>
        </section>

    </section>
    <%- include('include/footer'); %>      
</body>
</html>